<resources>

    <style name="Theme.Leanote" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_leanote</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Leanote</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Leanote</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Leanote</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Leanote</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Leanote</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_leanote</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_leanote</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Leanote</item>
    </style>

    <style name="ActionBar.Solid.Leanote" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_leanote</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_leanote</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_leanote</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Leanote</item>
    </style>

    <style name="ActionBar.Transparent.Leanote" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_leanote</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Leanote</item>
    </style>

    <style name="PopupMenu.Leanote" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_leanote</item>
    </style>

    <style name="DropDownListView.Leanote" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_leanote</item>
    </style>

    <style name="ActionBarTabStyle.Leanote" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_leanote</item>
    </style>

    <style name="DropDownNav.Leanote" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_leanote</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_leanote</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_leanote</item>
    </style>

    <style name="ProgressBar.Leanote" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_leanote</item>
    </style>

    <style name="ActionButton.CloseMode.Leanote" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_leanote</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Leanote.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Leanote</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Leanote</item>
    </style>

</resources>
